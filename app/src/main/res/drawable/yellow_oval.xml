<?xml version="1.0" encoding="utf-8"?>


<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorYellow"
                android:endColor="@color/colorYellow"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorYellow" />
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <size
                android:height="40dp"
                android:width="100dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorYellow"
                android:endColor="@color/colorYellow"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorYellow" />
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <size
                android:height="40dp"
                android:width="200dp" />
        </shape>
    </item>
</selector>
